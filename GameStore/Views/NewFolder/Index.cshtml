@model GameStore.ViewModels.EmployeeDashboardViewModel

@{
    ViewData["Title"] = "Dashboard Nhân viên";
}

<div class="container py-5">
    <h1 class="text-white">Dashboard Nhân viên</h1>
    <hr class="text-white" />

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card text-white bg-dark">
                <div class="card-body">
                    <h5 class="card-title">Tổng số sản phẩm còn trong kho</h5>
                    <h2 class="card-text fw-bold">@Model.TotalProductsInStock</h2>
                </div>
            </div>
        </div>
    </div>

    <h3 class="text-white mt-4">Xem đơn hàng theo ngày</h3>
    <div class="card text-white bg-dark">
        <div class="card-body">
            <form asp-action="ViewOrders" asp-controller="Employee" method="post" class="row g-3">
                <div class="col-md-5">
                    <label for="startDate" class="form-label">Từ ngày</label>
                    <input type="date" class="form-control" id="startDate" name="startDate" required />
                </div>
                <div class="col-md-5">
                    <label for="endDate" class="form-label">Đến ngày</label>
                    <input type="date" class="form-control" id="endDate" name="endDate" required />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Lọc đơn hàng</button>
                </div>
            </form>
        </div>
    </div>

@if (Model.Orders.Any())
{
        <h3 class="text-white mt-4">Danh sách đơn hàng</h3>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Mã đơn hàng</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.OrderDate.ToString?("dd/MM/yyyy")</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>@order.Status</td>
                    </tr>
                }
            </tbody>
        </table>
}
    }
