@{
    ViewData["Title"] = "Trang chủ";
}

<main>
    <section class="hero">
        <div class="slider-container">
            <div class="slide active" data-slide="0">
                <!-- Thay đổi ở đây: Đặt style trực tiếp cho thẻ con thay vì thẻ cha -->
                <div class="slide-background" style="background-image: url('/image/PS.webp');"></div>
                <div class="slide-overlay" style="background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4));"></div>
                <div class="slide-content">
                    <p>Máy Game mạnh mẽ nhất</p>
                    <h1>PS5 / PS5 Pro</h1>
                    <a href="#" class="cta-button">Mua Ngay</a>
                </div>
            </div>
            <!-- Làm tương tự cho các slide khác -->
            <div class="slide" data-slide="1">
                <div class="slide-background" style="background-image: url('/image/xbox.jpeg');"></div>
                <div class="slide-overlay" style="background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4));"></div>
                <div class="slide-content">
                    <p>Hiệu năng không đối thủ</p>
                    <h1>Xbox Series X</h1>
                    <a asp-controller="Product" asp-action="Index" class="cta-button">Khám phá</a>
                </div>
            </div>
            <div class="slide" data-slide="2">
                <div class="slide-background" style="background-image: url('/image/NS2.jpg');"></div>
                <div class="slide-overlay" style="background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4));"></div>
                <div class="slide-content">
                    <p>Chơi game mọi lúc, mọi nơi</p>
                    <h1>Nintendo Switch</h1>
                    <a asp-controller="Product" asp-action="Index" class="cta-button">Xem chi tiết</a>
                </div>
            </div>
        </div>
        <!-- Các nút điều khiển giữ nguyên -->
        <div class="slider-controls">
            <button class="control-btn prev-btn"><i class="fas fa-chevron-left"></i></button>
            <button class="control-btn next-btn"><i class="fas fa-chevron-right"></i></button>
        </div>
        <div class="slider-dots"></div>
    </section>

    <section class="categories-section">
        <div class="container">
            <div class="category-grid">
                <a asp-controller="Products" asp-action="Index" class="category-item">
                    <img src="/image/Game.png" alt="Sản Phẩm">
                    <span>Sản phẩm</span>
                </a>
                <a href="#" class="category-item">
                    <img src="/image/console.png" alt="console">
                    <span>Phụ kiện</span>
                </a>
                <a href="#" class="category-item">
                    <img src="/image/gamedics.png" alt="Lót chuột">
                    <span>Đĩa/Băng Game</span>
                </a>
                <a href="#" class="category-item">
                    <img src="/image/gamecards.png" alt="Phụ kiện gaming">
                    <span>Game thực</span>
                </a>
                <a href="#" class="category-item">
                    <img src="/image/icon-chair.png" alt="Ghế công thái học">
                    <span>Ghế công thái học</span>
                </a>
            </div>
        </div>
    </section>
</main>